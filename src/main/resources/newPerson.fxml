    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" layoutX="-1.0" layoutY="3.0" prefHeight="45.0" prefWidth="640.0" text="Dodaj nowego pracownika">
